<?xml version="1.0"?>
<SyntaxDefinition name="Custom Highlighting" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<Color name="Comment" foreground="Green" />
	<Color name="String" foreground="Blue" />

	<!-- This is the main ruleset. -->
	<RuleSet>
		<Span color="Comment" begin="//" />
		<Span color="Comment" multiline="true" begin="/\*" end="\*/" />

		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<!-- nested span for escape sequences -->
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>

		<Keywords fontWeight="bold" foreground="Blue">
			<Word>if</Word>
			<Word>else</Word>
			<Word>int</Word>
			<Word>char</Word>
			<Word>boolean</Word>
			<Word>string</Word>
			<Word>while</Word>
			<Word>do</Word>
			<Word>return</Word>
			<Word>break</Word>
			<Word>true</Word>
			<Word>flase</Word>
			<Word>switch</Word>
			<Word>public</Word>
			<Word>void</Word>
			<Word>null</Word>
			<Word>double</Word>
			<Word>catch</Word>
			<Word>float</Word>
			<Word>import</Word>
			<Word>case</Word>
			<Word>static</Word>
			<Word>this</Word>
			<Word>final</Word>
			<Word>for</Word>
			<Word>try</Word>
			<Word>abstract</Word>
			<Word>instanceof</Word>
			<Word>assert</Word>
			<Word>byte</Word>
			<Word>class</Word>
			<Word>enum</Word>
			<Word>extends</Word>
			<Word>interface</Word>
			<Word>long</Word>
			<Word>native</Word>
			<Word>new</Word>
			<Word>package</Word>
			<Word>private</Word>
			<Word>protected</Word>
			<Word>short</Word>
			<Word>strictfp</Word>
			<Word>super</Word>
			<Word>synchronized</Word>
			<Word>throws</Word>
			<Word>volatile</Word>
			<Word>transient</Word>
			
			
			<!-- ... -->
		</Keywords>

		<Keywords fontWeight="bold" fontStyle="italic" foreground="Red">
			<Word>AvalonEdit</Word>
		</Keywords>

		<!-- Digits -->
		<Rule foreground="Red" fontWeight="bold">
			\b0[xX][0-9a-fA-F]+  # hex number
			|    \b
			(    \d+(\.[0-9]+)?   #number with optional floating point
			|    \.[0-9]+         #or just starting with floating point
			)
			([eE][+-]?[0-9]+)? # optional exponent
		</Rule>
	</RuleSet>
</SyntaxDefinition>
		
